# EKS Cluster Validator Environment Variables
# Copy this file to .env and customize with your values
# NEVER commit .env files containing real credentials

# AWS Configuration
# AWS credentials (alternative to AWS CLI configuration)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_DEFAULT_REGION=us-east-1

# AWS Profile (if using named profiles instead of access keys)
AWS_PROFILE=default

# AWS Role Assumption (optional)
AWS_ASSUME_ROLE_ARN=arn:aws:iam::123456789012:role/EKSValidatorRole
AWS_EXTERNAL_ID=your-external-id

# Kubernetes Configuration
KUBECONFIG=~/.kube/config
KUBERNETES_CONTEXT=your-cluster-context

# Application Configuration
LOG_LEVEL=INFO
REPORT_DIR=./reports
VALIDATION_TIMEOUT=300
MAX_PARALLEL_WORKERS=5

# Development Configuration
# Set to true to enable debug logging and additional checks
DEBUG=false

# Security Configuration
# Enable additional security validations
STRICT_SECURITY_MODE=true

# Report Configuration
INCLUDE_SENSITIVE_DATA=false
REPORT_FORMAT=markdown

# Cache Configuration
CACHE_TTL_SECONDS=3600
ENABLE_CACHE=true
